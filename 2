print("Сортування розділів документа")

n = int(input("Введіть кількість розділів (1–20): "))

if n < 1 or n > 20:
    print("Кількість повинна бути від 1 до 20!")
else:
    sections = []
    for i in range(n):
        name = input(f"Назва розділу №{i + 1}: ")
        sections.append(name)

    print("\n1 - за алфавітом")
    print("2 - у зворотному порядку")
    print("3 - за довжиною")
    method = input("Ваш вибір: ")

    sections = list(set(sections))

    if method == "1":
        sections.sort()
    elif method == "2":
        sections.sort(reverse=True)
    elif method == "3":
        sections.sort(key=len)

    print("\nВідсортовані розділи:")
    for s in sections:
        print("-", s)
